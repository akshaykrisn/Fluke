<?xml version="1.0" encoding="utf-8"?>
<com.goka.walker.WalkerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/walker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sharewalk" />


    <TextView
        android:tag="1"
        android:id="@+id/txt101"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Big wishes, big gifts. Spread the word."
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:fontFamily="@font/goobold"
        android:layout_below="@+id/img"/>

    <TextView
        android:id="@+id/txt102"
        android:layout_width="match_parent"
        android:text="Multiple ways to increase your chances to win mouth-watering\ngifts."
        android:ellipsize="end"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32sp"
        android:textColor="#84000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:fontFamily="@font/goomedium"
        android:layout_below="@+id/txt101"/>

</com.goka.walker.WalkerLayout>