<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CardSlider">
        <!-- Active card offset from start of RecyclerView. Default value is 50dp. -->
        <attr name="activeCardLeftOffset" format="dimension"/>
        <!-- Card width. Default value is 148dp. -->
        <attr name="cardWidth" format="dimension"/>
        <!-- Distance between cards. Default value is 12dp. -->
        <attr name="cardsGap" format="dimension"/>
        <!-- ViewUpdater implementation class. If not set, DefaultViewUpdater class is used. -->
        <attr name="viewUpdater" format="string"/>
    </declare-styleable>

    <declare-styleable name="WaveLineView">
        <!--backgroundColor
        color of the view's background -->

        <!--lineColor
        color of the wave lines -->

        <!--thickLineWidth
        the center thickLines' stroke width-->

        <!--fineLineWidth
        the three fineLines's stroke width-->

        <!--moveSpeed
        the wave line animation move speed from left to right
        you can use negative number to make the animation from right to left
        the default value is 290F,the smaller, the faster
        -->

        <!--samplingSize
        The number of sampling points, the higher the more fine,
        but higher than a certain limit the naked eye is difficult
        to distinguish, the higher the lower the efficiency of rendering
        -->

        <!--sensibility
       Sensitivity, the bigger the more sensitive [1,10]
       the default value is 5
       -->
        <attr name="wlvBackgroundColor" format="color"/>
        <attr name="wlvLineColor" format="color"/>
        <attr name="wlvThickLineWidth" format="dimension"/>
        <attr name="wlvFineLineWidth" format="dimension"/>
        <attr name="wlvMoveSpeed" format="float"/>
        <attr name="wlvSamplingSize" format="integer"/>
        <attr name="wlvSensibility" format="integer"/>
    </declare-styleable>


    <attr name="ttlm_defaultStyle" format="reference" />

    <!-- default style -->
    <declare-styleable name="TooltipLayout">
        <attr name="ttlm_padding" format="dimension" />
        <attr name="ttlm_strokeColor" format="color" />
        <attr name="ttlm_backgroundColor" format="color" />
        <attr name="ttlm_strokeWeight" format="dimension" />
        <attr name="ttlm_cornerRadius" format="dimension" />
        <attr name="ttlm_arrowRatio" format="float" />
        <attr name="android:textAppearance" />
        <attr name="android:gravity" />
        <attr name="ttlm_overlayStyle" format="reference" />
        <attr name="ttlm_font" format="string" />

        <!-- elevation of the tooltip. Works only on non custom views -->
        <attr name="ttlm_elevation" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TooltipOverlay">
        <attr name="android:color" />
        <attr name="android:alpha" />
        <attr name="ttlm_repeatCount" format="integer" />
        <attr name="ttlm_duration" format="integer" />
        <attr name="android:layout_margin" />
    </declare-styleable>
</resources>